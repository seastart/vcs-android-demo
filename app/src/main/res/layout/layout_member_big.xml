<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_container_fl"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.ook.android.ikPlayer.VcsPlayerGlTextureView
        android:id="@+id/member_player"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="@+id/member_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="#99000000"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/member_mic_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="3dp"
            android:src="@drawable/slc_conf_mic"/>

        <ImageView
            android:id="@+id/member_video_iv"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/slc_conf_video"/>

        <TextView
            android:id="@+id/member_nick_tv"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="#fff"
            android:text="昵称"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>