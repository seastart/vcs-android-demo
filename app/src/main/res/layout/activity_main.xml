<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="15dp"
    android:paddingEnd="15dp"
    android:gravity="center"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="地址："
            style="@style/LabelStyle"  />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/ip_et"
            android:hint="输入地址"
            android:text="120.26.56.75"
            android:inputType="text"
            style="@style/InputStyle" />

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="端口号："
            style="@style/LabelStyle"  />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/port_et"
            android:hint="输入端口号"
            android:text="8006"
            style="@style/InputStyle"  />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="房间号："
            style="@style/LabelStyle" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/room_no_et"
            android:text="ea71f378ddb843dd9653446557bbd225"
            android:hint="输入房间号"
            android:inputType="text"
            style="@style/InputStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="AGC："
            style="@style/LabelStyle"  />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/agc_et"
            android:hint="输入AGC"
            android:text="10000"
            style="@style/InputStyle"  />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="AEC："
            style="@style/LabelStyle"  />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/aec_et"
            android:hint="输入AEC"
            android:text="12"
            style="@style/InputStyle"  />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="音频采样率："
            style="@style/LabelStyle"  />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/sample_rate_et"
            android:hint="输入音频采样率"
            android:text="48000"
            style="@style/InputStyle"  />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="调试地址："
            style="@style/LabelStyle" />

        <android.support.v7.widget.AppCompatEditText
            android:id="@+id/debug_addr_et"
            android:hint="输入远程调试地址"
            android:text=""
            android:inputType="text"
            style="@style/InputStyle" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="开启调试开关："
            style="@style/LabelStyle" />

        <CheckBox
            android:id="@+id/debug_check_box"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="码率自适应    ："
            style="@style/LabelStyle" />

        <CheckBox
            android:id="@+id/auto_check_box"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:text="使用硬件编码："
            style="@style/LabelStyle" />

        <CheckBox
            android:id="@+id/hard_decoder_box"
            android:focusable="true"
            android:checked="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="关闭自己视频："
            android:layout_width="wrap_content"
            style="@style/LabelStyle" />

        <CheckBox
            android:id="@+id/video_check_box"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:text="关闭自己音频："
            style="@style/LabelStyle" />

        <CheckBox
            android:id="@+id/audio_check_box"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="不接他人视频："
            android:layout_width="wrap_content"
            style="@style/LabelStyle" />

        <CheckBox
            android:id="@+id/video_other_box"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginStart="25dp"
            android:layout_width="wrap_content"
            android:text="不接他人音频："
            style="@style/LabelStyle" />

        <CheckBox
            android:id="@+id/audio_other_box"
            android:focusable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/start_btn"
        android:focusable="true"
        android:layout_marginTop="15dp"
        android:text="开始会议"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/ip_addr_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#000" />
</LinearLayout>